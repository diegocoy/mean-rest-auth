
{{flash}}
<div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span> Login</h1>

	<!-- show any messages that come back with authentication -->
	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form id="login-form" ng-submit="main.login(loginForm)" novalidate="">
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="loginForm.user" id="email" ng-model="loginForm.user">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="loginForm.password" id="password" ng-model="loginForm.password">
		</div>

		<button type="submit" class="btn btn-warning btn-lg">Login</button>
	</form>
	<button ng-click="main.c()" class="btn btn-warning btn-lg">Login</button>
	<hr>

	<p>Need an account? <a href="/signup">Signup</a></p>
	<p>Or go <a href="/">home</a>.</p>

</div>
